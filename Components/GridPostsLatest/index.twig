{% if items|length > 0 %}
  <div class="flyntComponent" is="flynt-grid-posts-latest">
    <div class="container">
      <ul class="grid">
        {% for item in items %}
          <li class="grid-item {{ item.post_type }}">
            <div class="content">
              <a href="{{ item.link }}" class="content-link" title="{{ item.title }}">
                <img class="content-image lazyautosizes lazyloaded"
                  src="{{ item.thumbnail.src }}"
                  data-srcset="{{function('wp_get_attachment_image_srcset', item.thumbnail.id)}}"
                  data-sizes="auto"
                  alt="{{ item.title }}">
                <div class="content-inner">
                  <p class="content-inner--title">{{ item.title }}</p>
                </div>
              </a>
            </div>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
{% endif %}
